
<%- include('../includes/head.ejs') %>
 <link rel="stylesheet" href="./css/bootstrap.min.css">
    <link rel="stylesheet" href="./js/bootstrap.min.js">
    <link rel="stylesheet" type="text/css" href="/css/signin.css" />
<body>


  <main class="form-signin">
      <img class="sitelogo" src="/asset/BeastMode512.png" alt="Site Logo">

      <% if (errorMessage) { %>
          <div class="message-error"><%= errorMessage %></div>
      <% } %>

      <form method="POST" action="/trainer/login">
        <div class="form-floating">
          <input type="email"
                  placeholder="name@example.com"
                  class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                  type="email" 
                  name="email" 
                  id="email" 
                  value="<%= oldInput.email %>"
          >
          <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
          <input type="password" 
                  placeholder="Password"
                  class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                  type="password" 
                  name="password" 
                  id="password" 
                  value="<%= oldInput.password %>">
          
          <label for="floatingPassword">Password</label>
        </div>
    
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
       
      </form>
    </main>


 
 
</body>
</html>